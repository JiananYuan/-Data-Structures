#include <iostream>
#define MAX 5005
#define inf 0x7fffffff
#define ERROR -1
using namespace std;
int Graph[MAX][MAX];

void initGraph(int n) {
    for(int i=1;i<=n;i++) {
        for(int j=1;j<=n;j++) {
            Graph[i][j] = inf;
        }
    }
}

void buildGraph(int m) {
    for(int i=1,x,y,c;i<=m;i++) {
        cin>>x>>y>>c;
        Graph[x][y] = Graph[y][x] = c;
    }
}

int prim(int n) {
    int dis[MAX],MST[MAX];
    MST[1] = 0;
    for(int i=2;i<=n;i++) {
        dis[i] = Graph[1][i];  //初始化每个点到现有树的距离
        MST[i] = 1;            //让每个节点的父结点初始化为第一个结点
    }
    int sum = 0;
    for(int i=2;i<=n;i++) {
        int minx = inf;
        int id = 0;
        for(int j=2;j<=n;j++) {
            if(dis[j] != 0 && dis[j] < minx) {
                minx = dis[j];
                id = j;
            }
        }
        if(id == 0) return ERROR;
        //cout << "V" << mst[minid] << "-V" << minid << "=" << minx << endl;
        sum += minx;
        dis[id] = 0;
        for(int j=2;j<=n;j++) {
            if(Graph[id][j] < dis[j]) {
                dis[j] = Graph[id][j];
                MST[j] = id;
            }
        }
    }
    return sum;
}

int main() {
    int n,m; cin>>n>>m; //n为顶点个数，m为边的个数
    initGraph(n);
    buildGraph(m);
    int cost = prim(n);
    if(cost == -1) cout<<"orz"<<endl;
    else           cout<<cost<<endl;
    return 0;
}
